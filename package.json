{
	"name": "tailwind-theme-kit",
	"version": "0.0.1",
	"description": "A customizable Tailwind CSS plugin with reusable components and theme extensions.",
	"type": "module",
	"scripts": {
		"build": "npx tailwindcss -c playground/tailwind.config.js -i playground/tailwind.css -o playground/dist/output.css --watch",
		"format": "biome format --write .",
		"lint": "biome lint . --write"
	},
	"license": "MIT",
	"dependencies": {
		"autoprefixer": "^10.4.20",
		"postcss": "^8.4.49",
		"tailwindcss": "^3.4.16"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4"
	}
}
